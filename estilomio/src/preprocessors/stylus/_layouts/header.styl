/*!!
* Layout
* @module layout
* @class header
* @author Ana Reyna
*/

header
	ul
		list-style none
		padding 0
		margin 0
		li
			display inline-block
	.header_top
		border-bottom 1px solid $lighterGray
		padding 12px 0
		.ico_menu
			display none
			sprite($ico_menu)
			+mobile()
				display inline-block
			+above(rupture.mobile-cutoff)
				display none !important

		.ico_close_menu
			display none
			sprite($ico_close_menu)
			+above(rupture.mobile-cutoff)
				display none !important
		.container
			lost-flex-container row
			align-items center
			+mobile()
				justify-content space-between
				align-items flex-end
			.logo
				font-size 50px 
				font-weight bold 
				letter-spacing -3px 
				+mobile()
					flex 1
					text-align center
					line-height 1
				img
					vertical-align middle
					margin-top -20px
					+mobile()
						width 170px
						margin-top 0
						
			.search_bar_vtex
				flex 1
				position relative
				margin 0 50px
				+mobile()
					order 1
					flex none
					width 100%
					margin 20px 0 10px
				.ico_search
					display none
					+mobile()
						display inline-block
						sprite ($ico_search)
						position absolute
						right 13px
						top 10px
						z-index 1
						pointer-events none
				fieldset
					border none
					margin 0
					padding 0
				select, label, legend
					display none
				.fulltext-search-box
					border 1px solid $lightGray
					border-radius $borderRadius
					font-size 15px
					font-family $family1
					height 40px
					line-height 1
					outline none
					padding 0 10px
					width 100%
					padding-right 100px
					color #9b9b9b
					appearance none
					+mobile()
						height 50px
						padding-right 70px
				.btn-buscar
					display inline-block
					height 40px
					padding 0 15px
					line-height    1
					text-align     center
					background     $primaryColor
					font-family inherit
					border-radius  $borderRadius
					position absolute
					right 0
					top 0
					border-top-left-radius 0
					border-bottom-left-radius 0
					border none
					outline none
					color white
					+mobile()
						height 50px
						color black
						width 55px

			.shopping_cart_vtex
				.ico_cart
					position relative
					float left
					.ico
						sprite($ico_cart)
						display inline-block
				.arrow_down
					sprite($triangle_down)
					margin-left 5px
					float right
					margin-top 7px
					+mobile()
						display none
				.cart_details
					float left
					margin-left 12px
					position relative
					+mobile()
						margin-left 5px
					.lbl_title
						+mobile()
							display none
					.portal-totalizers-ref
						.title, .amount-products, .amount-items strong, .amount-kits, .total-cart strong
							display none
						.total-cart-em
							font-style normal
							color lighten(black, 40%)
							margin 0
							font-size 14px
							font-weight bold
							+mobile()
								display none
						.amount-items-em
							position absolute
							background #727276
							border-radius 10px
							color white
							font-size 11px
							font-weight bold
							line-height 1
							padding 3px 5px
							font-style normal
							left -23px
							top 20px
							+mobile()
								left -15px

				.portal-minicart-ref
					position relative
					.v2-vtexsc-cart
						//display block !important
						display none
						z-index 750
						position absolute
						right 0
						top 50px
						background white
						.vtexsc-bt
							display inline-block
							sprite($white_triangle_up)
							position absolute
							right 55px
							top -8px
						.vtexsc-center
							border 1px solid $lightGray
							padding 15px 20px
							font-size 14px
							width 520px
							thead
								display none
							tr td
								padding-bottom 10px
								vertical-align middle
							.cartSkuImage

								img
									width 55px
									height auto
							.cartSkuName
								font-weight normal
								padding-left 10px
								padding-right 10px
								width 280px
								h4 a
									overflow hidden
									text-overflow ellipsis
									white-space nowrap
									width 230px
									display inline-block
								*
									font-weight inherit
							.cartSkuQuantity
								width 40px
								padding-left 10px
								padding-right 10px
							.cartSkuPrice
								padding-right 10px
							.cartSkuRemove
								sprite($ico_delete)
								display inline-block
								transition 0.3s all ease
								cursor pointer
								&:hover
									opacity 0.6
									transition 0.3s all ease

							.cartFooter
								border-top 1px solid $lightGray
								padding 15px 0 0
								height 50px
								.cartTotal
									font-weight bold
									display inline-block
									margin-top 6px
									.vtexsc-totalCart
										margin-left 10px
								.cartCheckout
									width 220px
									height 30px
									background $secondaryColor
									float right
									color white
									position relative
									&:after
										content 'COMPRAR'
										text-align center
										position absolute
										width 100%
										height 100%
										left 0
										right 0
										line-height 30px

	.menu_container
		+mobile()
			display none
			position absolute
			top 70px
			background white
			border-top 1px solid $lightGray
			width 100%
			z-index 100
			box-shadow 0px 2px 2px rgba(0,0,0,0.2)
		+above(rupture.mobile-cutoff)
			display block !important
	.header_middle
		lost-flex-container row
		align-items center
		height 30px
		line-height 1
		+mobile()
			margin 20px 0
		.nav_people
			flex 1
			ul
				+mobile()
					display flex
					align-items center
				li
					+mobile()
						display flex
						width 100%
						margin-right 20px
						&:last-child
							margin-right 0
					a
						padding 0 15px
						&:hover
							color $secondaryColor
							transition 0.3s all
						+mobile()
							flex 1
							text-align center
							background $lighterGray
							border-radius $borderRadius
							text-transform uppercase
							padding 10px 0
						&.active
							color $secondaryColor
						.lbl_mobile
							display none
							+mobile()
								display inline-block
						.lbl_desktop
							+mobile()
								display none

		.links
			text-transform uppercase
			color #636466
			font-size 11px
			+mobile()
				display none
			a
				&:first-child
					padding-right 20px
					margin-right 20px
					border-right 1px solid $lightGray

	.nav_categories
		background-color $lighterGray
		line-height 1
		+mobile()
			background white
		.menu_categories
			.chk_item
				display none
				opacity 0
				width 0
				+mobile()
					display block
					width 100%
					height 100%
					position absolute
					cursor pointer
					outline none
					z-index 1
					&:checked
						&~.menu_dropdown
							display block
							visibility visible
						&~.ico_minus
							display inline-block
						&~.ico_plus
							display none
			> li
				position relative
				> a
					+above(rupture.mobile-cutoff)
						text-transform uppercase
				&.highlight
					color $secondaryColor
				&:hover
					+above(rupture.mobile-cutoff)
						background white // active menu hover
						.menu_dropdown
							transition 0.3s all ease
							visibility visible
							transform translateX(0%)
				+mobile()
					display block
					clear both
				> a
					display inline-block
					padding 7px 15px
					transition 0.3s all ease
					+mobile()
						display block
						border-top 1px solid $lighterGray
						padding 18px 20px
						text-transform initial
						font-weight bold
					&:hover
						transition 0.3s all ease
				.ico_plus
					display none
					sprite($ico_plus)
					position absolute
					right 20px
					top 0
					bottom 0
					margin auto
					+mobile()
						display inline-block
				.ico_minus
					display none
					sprite($ico_minus)
					position absolute
					right 20px
					top 17px
					z-index 3
					pointer-events none

			.menu_dropdown
				background white
				visibility hidden
				position absolute
				width 600px
				font-size 14px
				text-transform initial
				padding 10px 20px
				box-shadow 0px 2px 2px 1px rgba(0,0,0,0.1)
				z-index 100 // product page product z index is higher 
				transform translateZ(0)
				transform translateY(3%)
				+mobile()
					box-shadow none
					position relative
					width 100%
					padding 0
					display none
					transform translateY(0)

				.menu_column_image
					overflow hidden
					display block
					img
						margin-top 30px
					p
						text-align center
						text-overflow ellipsis
						white-space nowrap
						overflow hidden
					.title
						text-transform uppercase
						font-weight bold

				.menu_column
					lost-column 1/3 3 10px
					border-right 1px solid $lighterGray
					padding 0 10px
					&:last-child
						border-right none
					+mobile()
						lost-column 1
						border-right none
						padding 0
					li
						width 100%
						a
							width 100%
							display block
							padding 6px 0
							&:hover
								color lighten(black, 40%)
								transition 0.3s all ease
							+mobile()
								border-top 1px solid $lighterGray
								padding 16px 0 16px 45px
								color #58595b

					.menu_title
						font-weight bold
						border-bottom 1px solid $lighterGray
						padding 5px 0
						margin-bottom 10px
						+above(rupture.mobile-cutoff)
							text-transform uppercase
						+mobile()
							margin 0
							border-bottom none
							padding 0
							//padding 16px 0 16px 30px
							//border-top 1px solid $lighterGray 
						a
							+mobile()
								padding-left 35px
								color inherit

ul.ui-corner-all
	background #fff
	border 1px solid #d7d7d7
	border-radius 0 0 2px 2px
	list-style outside none none
	margin 0 0 0 -2px
	padding 0
	width 622px !important
	z-index 999999!important
	position absolute !important
	top 55px !important
	+mobile()
		top 120px !important
		width 97% !important
	li
		color #a8a8a8
		cursor pointer
		font-size 15px
		list-style outside none none
		padding 5px 0 5px 20px
		transition all 100ms ease 0s
		&:hover
			background #828181 none repeat scroll 0 0
			color #fff
		a
			line-height 25px
			img
				float left
				margin-right 10px