	.vitrine.resultItemsWrapper
		#PagerTop_29596299.pager.top
			ul.pages
				li.first.pgEmpty primeiro
				li.previous.pgEmpty anterior
				li.page-number.pgCurrent 1
				li.next.pgEmpty próximo
				li.last.pgEmpty último
		#ResultItems_29596299.MasVendidoList
			.list_products.n4colunas
				- for (var b = 0; b<2; b++)
					ul
						- for (var x = 0; x<4; x++)
							li
								a.product_box(href="producto.html")
									.img_container
										img.unveil(data-src="http://placem.at/things?w=210&h=200")
									.text
										p.product_description.ellipsis Disney pluto interactivo control a radio texto de tres lineas visible  
										span.original_price S/. 199,00
										span.price S/.149,00
							li.helperComplement.hide
		#PagerBottom_29596299.pager.bottom
			ul.pages
				li.first.pgEmpty primeiro
				li.previous.pgEmpty anterior
				li.page-number.pgCurrent 1
				li.page-number 2
				li.page-number 3
				li.page-number 4
				li.page-number 5
				li.next.pgEmpty próximo
				li.last.pgEmpty último
