.e-button
	background-color $secondaryColor
	color white
	height 2.6rem
	padding-left 30px
	padding-right 30px
	border-radius $borderRadius
	line-height 2.6rem
	display inline-block
	transition $transition
	font-family $family1
	border 0
	outline 0
	&:hover 
		background-color darken($secondaryColor, 5%)
		color white
		transition $transition
	&--hollow
		border 3px solid $fontColor
		color $fontColor
		background-color transparent
		line-height 2.4rem
		&:hover
			background-color $fontColor
			border-color $fontColor
	&--block
		display block 	
		width 100%
		text-align center
	&:disabled,
	&[disabled],
	&.is-disabled,
	&--disabled
		cursor	not-allowed
		opacity	0.7
		pointer-events none