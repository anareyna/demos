mixin c-banners__item(config)
	.c-banners__item&attributes(attributes)
		a.c-banners__link(href!=config.link, title!=config.title)
			img.c-banners__image(src!=`${page.url.image}${config.image}`, alt!=config.alt)


mixin c-slider__item(config)
	a.c-slider__link(href!=config.link, title!=config.title)
		img.c-slider__image(src!=`${page.url.image}${config.image}`, alt!=config.alt)
