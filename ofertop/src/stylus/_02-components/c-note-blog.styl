.c-note-blog
	&__item
		lost-column 1/3
	&__title
		font-size 16px
		margin 20px 0
	&__description
		font-size 14px
		overflow hidden
		max-height 70px
		display block
		margin 14px 0
	&__image
		width 100%
		display block
		max-height 170px
		object-fit cover
	&__link
		color  $brand_color
		font-weight bold


+mobile()
	.c-note-blog
		&__item
			lost-column 1/1
			&:nth-child(n+2)
				display none

