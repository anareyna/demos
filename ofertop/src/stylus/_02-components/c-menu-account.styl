.c-menu-account
	position absolute
	visibility hidden
	padding 0
	background-color #fff
	border 1px solid transparent
	border-radius $border_radius
	right 0
	width 260px
	text-align center
	box-shadow 1px -3px 21px rgba(0,0,0,0.175)
	z-index 210
	&:before
		content: ''
		top -13px
		left 75%
		position absolute
		border 6px solid transparent
		border-bottom-color #FFF
		margin-left -7px
	&__item
		margin 0
		&:last-child
			.c-menu-account__link
				border none
	&__link
		padding 10px 15px
		display block
		border-bottom 1px solid lighten($gray, 50%)
		text-align initial
		font-weight bold
		&:hover
			background $light_gray

+mobile()
	.c-menu-account
		width 100%
		box-shadow none
		top 52px
		box-shadow 0 7px 6px -6px rgba(0,0,0,0.2)
		&:before
			display none

