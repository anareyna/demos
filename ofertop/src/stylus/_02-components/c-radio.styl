.c-radio
	&__input
		position absolute
		visibility hidden
		&:checked
			& ~ .c-radio__radio
				border 1px solid $gray
				&:before
					background $brand_color
	&__label
		cursor pointer
		position relative
		margin-right 20px
	&__radio
		display inline-block
		position relative
		border 1px solid $gray
		border-radius 100%
		height 23px
		width 23px
		left 5px
		z-index 1
		background white
		transition border .25s linear
		vertical-align middle
		&:before
			display block
			position absolute
			content ''
			border-radius: 100%
			height 13px
			width 13px
			top 4px
			background white
			left 4px
			margin auto
			transition background 0.25s linear
			-webkit-transition background 0.25s linear
