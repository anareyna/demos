.c-special-collection
	&__list
		margin 0 0 30px 0
	&__item
		margin-bottom 10px
		lost-column 1/3 3 15px
		position relative
		&:after
			transition 0.2s all ease-in
			background black
			opacity 0.3
			content ' '
			width 100%
			height 100%
			top 0
			position absolute
			z-index 0
		&:before
			content 'Ver ofertas'
			background $brand_color
			border-radius $border_radius
			color white
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			margin auto
			height 35px
			line-height 35px
			text-align center
			width 130px
			z-index 1
			visibility hidden
			font-size 16px
		&:hover
			&:before // Ver Ofertas button
				visibility visible
			&:after
				opacity 0.7
				transition 0.2s all ease-in
			.c-special-collection__item-message
				display none

	&__item-image
		margin 0
		width 100%
		display block
	&__item-message
		position absolute
		width 100%
		text-align center
		color white
		top 50%
		transform translateY(-50%)
		z-index 1
		padding 14px

	&__item-title
		margin 0
		text-transform uppercase
		flex-basis 100%
		z-index 1
		font-size 22px
		font-weight normal
	&__item-discount
		margin 0
		z-index 1
	.l-newsletter
		display none

+mobile()
	.c-special-collection
		.l-section-menu__header
			display none
		.l-newsletter
			display block
		&__item
			lost-column 1/2 2 15px
		&__item-title
			font-size 18px
		&__item-discount
			display none



