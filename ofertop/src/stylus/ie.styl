html.ie
	.c-modal-newsletter
		&__check-group
			max-height 100%

	.l-newsletter__form-genre
		flex-shrink 0

	+mobile()
		.l-header
			position relative
			&__nav
				position absolute
				top 5px
			&__search-form
				margin-top 14px
			.c-nav
				&__item
					text-align left
					&:hover
						text-align left

				&__dropdown
					position relative
					top 0
					height 100%
				&__dropdown-list
					flex-basis 100%
				&__dropdown-list-item
					height 100%
					max-height 100%
		.c-menu-account
			top 50px
			&__link
				text-align left
