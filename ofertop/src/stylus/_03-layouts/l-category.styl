.l-category
	border-bottom 1px dashed $gray
	padding-bottom 15px
	&__title
		color $brand_color
		text-transform uppercase
		font-size 16px
		margin-top 30px

	.c-special-collection
		&__item
			lost-column 1/4
			position relative
			float left !important
			margin-right 15px !important
			outline none
			&:nth-child(4)
				margin-right 0 !important
		&__item-title
			font-size 18px

+mobile()
	.l-category
		.c-special-collection
			&__item
				lost-column none
				margin-right 0 !important


